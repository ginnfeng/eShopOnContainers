          <Function>
          </Function>
        </Literal>
      </Declarations>
      <Code Language="csharp"><![CDATA[public class $className$
{
	static private $className$ instance;
	static public  $className$ Instance
	{
		get
            	{
			if(instance==null)
				instance=new $className$();
                		return instance;
            	}
 	}
}]]></Code>
